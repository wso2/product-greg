<project name="org.wso2.carbon.registry.search.client.sample" default="run" basedir=".">
    <property name="lib.dir" value="${basedir}/lib"/>
    <property name="greg.home" value="${basedir}../../../../../"/>
    <property name="class.dir" value="target/classes"/>
    <target name="clean">
        <delete dir="target" quiet="true"/>
        <delete dir="${class.dir}" quiet="true"/>
    </target>

    <target name="init">
        <mkdir dir="${lib.dir}"/>
        <mkdir dir="${class.dir}"/>
        <path id="javac.classpath">
            <pathelement path="${class.dir}"/>
            <fileset dir="${lib.dir}">
                <include name="*.jar"/>
            </fileset>
            <fileset dir="${greg.home}/repository/lib">
                <include name="*.jar"/>
            </fileset>
            <fileset dir="${greg.home}/repository/components/plugins">
                <include name="javax.cache.wso2_*.jar"/>
            </fileset>
        </path>
    </target>
    <target name="compile" depends="init" description="Compile all Java">
        <javac srcdir="src" destdir="${class.dir}" debug="on" debuglevel="lines,vars,source">
            <classpath refid="javac.classpath"/>
        </javac>
    </target>

    <target name="jar" depends="clean, compile">
        <jar jarfile="target/${ant.project.name}.jar">
            <fileset dir="${class.dir}">
                <include name="**/*.class"/>
            </fileset>
        </jar>
        <copy file="target/${ant.project.name}.jar" todir="dist" overwrite="true"/>
    </target>

    <target name="run" depends="jar" >
        <java classname="org.wso2.carbon.registry.search.client.SearchClient" classpathref="javac.classpath" fork="true">
            <!--<jvmarg value="-Xdebug" />-->
            <!--<jvmarg value="-Xrunjdwp:transport=dt_socket,server=y,suspend=y,address=5005" />-->
            <sysproperty key="sample.resources" value="${basedir}/src/main/resources/"/>
            <classpath>
                <pathelement location="target/${ant.project.name}.jar"/>
            </classpath>
        </java>
    </target>

</project>
