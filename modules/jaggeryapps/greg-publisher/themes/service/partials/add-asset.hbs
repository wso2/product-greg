<div class="content-div">
    <div class="row-fluid">
        <div class="span12 asset-view-container">
            <div class="widget wlightblue">
                <div class="widget-head">
                    <div class="pull-left">{{T "Add"}} {{data.meta.singularLabel}}</div>
                    <div class="clearfix"></div>
                </div>
                <div class="widget-content">
                    <form  class="form-horizontal" id="form-asset-create" enctype="multipart/form-data" data-use-plugins="UnboundDataCompiler" >
                        {{#each data.fields}}
                        <div class="control-group">

                            <!--Support for unbounded tables-->
                            {{#if this.isUnboundTable}}

                            {{else}}
                            <b><label class="control-label">{{this.label}}

                                :</label>
                            </b>
                            {{/if}}

                            <div class="controls">
                                {{#if this.isTextBox}}
                                	{{#if isReadOnly}}
                                		<input type="hidden" name='{{this.name}}' value='{{this.value}}'/>
                                		<input id='{{this.name}}' type='text' value='{{this.value}}'  class="span8 fm-managed" data-use-plugins="TextFieldValueExtractor,ReadOnlyField" data-ready-only="{{this.isReadOnly}}"/>
                                	{{else}}
                                		<input id='{{this.name}}' name='{{this.name}}' type='text' value='{{this.value}}'  class="span8 fm-managed"  data-use-plugins='RequiredField,TextFieldValueExtractor' data-ready-only='{{this.isReadOnly}}' data-required='{{this.isRequired}}' />
                                	{{/if}}

                                {{/if}}
                                {{#if this.isDate}}
                                        <input type='text' id='{{this.name}}' name='{{this.name}}' value='{{this.value}}' class='fm-managed' data-ready-only='{{this.isReadOnly}}' data-required="{{this.isRequired}}" data-use-plugins="RequiredField,DatePickerPlugin"
                                                data-date-format='yyyy-mm-dd' >
                                {{/if}}
                                {{#if this.isOptions}}
                                    <select id="{{this.name}}"  class="span8 selectpicker fm-managed" name='{{this.name}}' data-use-plugins="TextFieldValueExtractor">
                                    {{#each this.valueList}}
                                        <option>{{this}}</option>
                                    {{/each}}
                                    </select>
                                {{/if}}
                                {{#if this.isTextArea}}
                                    <textarea id='{{this.name}}' value='{{this.value}}' class="span8 fm-managed" name='{{this.name}}'data-use-plugins="TextFieldValueExtractor"></textarea>
                                {{/if}}
                                {{#if this.isFile}}
                                	<div class="span8">
                                		<div class="tbl-upload">
                                			<div class="tbl-upload-row">
                                				<div class="tbl-upload-cell">
                                					 <input type="text" class="txt-filepath" disabled="true"/>
                                				</div>
                                				<div class="tbl-upload-cell">
                                					<button class="btn btn-upload">{{T "Browse"}}</button>
                                   					<input class='fm-managed' id='{{this.name}}' type='file' name='{{this.name}}' data-use-plugins="DefaultFileUploadPlugin,RequiredField" data-required='{{this.isRequired}}'/>
                                				</div>
                                			</div>
                                		</div>

                                	</div>
                                {{/if}}
                                {{#if this.isOptionsText}}
                                    <div id="{{this.name}}" name='{{this.name}}' class="options-text fm-managed" data-add-button="Add {{this.label}}" data-selected="" data-options="{{this.valueList}}"
                                            data-use-plugins="OptionsText"></div>
                                {{/if}}
                                {{#if this.isUnboundTable}}
                                     {{>unbound-table this}}
                                {{/if}}
                            </div>
                        </div>
                        {{/each}}

						<div class="control-group">
							<b><label class="control-label">{{T "Tags"}}: </label></b>
							<div class="controls">
								<input type='text' id='tag-container' class='fm-managed' name='tag-container' data-field-name='tags' data-use-plugins="TagPlugin" data-tag-api='/publisher/api/tag/'>
							</div>
						</div>


                        <div id="saveButtons" class="form-actions">
                        	<input type='button' id="btn-create-asset" class="btn btn-primary" name="addNewAssetButton" value='{{t "Create"}}'>
                      		<button class="btn" type="reset">{{t "Reset"}}</button>
			                <input type="hidden" value="{{shortName}}" name="{{shortName}}" id="meta-asset-type">
                        </div>
                    </form>
                </div>

            </div>
	    </div>
    </div>
</div>
