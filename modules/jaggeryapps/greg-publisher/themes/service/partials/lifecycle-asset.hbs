<div class='content-div'>
	<div class="row-fluid">
		<div class="span12 asset-view-container">
			<div class="widget wlightblue widget-lifecycle">
				<div class="widget-head">
					<div class="pull-left">
						{{t "Lifecycle"}} - {{{snoop "fields(name=overview_name).value" this.data}}}
					</div>
					{{#if data.info.lifecycleState}}
					<span id='state' class="pull-right">{{data.info.lifecycleState}}</span>
					{{/if}}
					<div class="clearfix"></div>
				</div>
				<div class="widget-content">
					<div class="info-div alert">
						<a data-dismiss="alert" class="close">x</a><i class="icon-info-sign"></i><span></span>
					</div>
					<form class="form-horizontal lifecycle">
						<div class="lifecycle-tip">
							<i class="icon-long-arrow-up"></i> &nbsp; {{t "Click on a circle to change state"}}
						</div>
						<div>
							<div id='checklist'></div>
						</div>
						<div id='canvas'>

						</div>
						<div id="commentModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="commentModalLabel" aria-hidden="true">
							<div class="modal-header">
								<h3 id="commentModalLabel">{{t "Add a comment"}}</h3>
							</div>
							<div class="modal-body">
								<textarea class="span12" id="commentModalText"></textarea>
							</div>
							<div class="modal-footer">
								<button class="btn" data-dismiss="modal" aria-hidden="true">{{t "Close"}}</button>
								<button id="commentModalSave" class="btn btn-primary">{{t "Submit change"}}</button>
							</div>
						</div>
						<!--
						<div class="form-actions" id='form-actions'>
												</div>-->

					</form>
				</div>
			</div>
			<legend>
				History
			</legend>
			<table id='lc-history' class="table">

			</table>

		</div>
	</div>
</div>
