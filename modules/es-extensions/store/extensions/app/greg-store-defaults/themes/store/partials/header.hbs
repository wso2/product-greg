<!-- header -->
{{> sidebar-container . }}
<header>
    <div class="es-row row wr-global-header">
        <div class="col-xs-8 col-sm-8 app-logo">
            <a href="{{tenantedUrl ""}}{{meta.landingPage}}">
                <img src="{{url "/themes/store/img/logo.png"}}" />
                <h2 class="app-title">Governance Center - Store</h2>
            </a>
        </div>

        <div class="col-xs-4 col-sm-4 wr-auth-container">
            <div class="wr-auth pull-right">
            {{#if cuser.username}}
                <a href="#" data-toggle="dropdown" class="">
                    <div class="auth-img">
                        <i class="fw fw-user"></i>
                        <span id="logedInUser" class="hidden-xs-320">{{cuser.username}}</span>
                        <span class="caret"></span>
                    </div>
                </a>
                <div class="es-dropdown-menu es-logout-menu dropdown-menu">
                    <div class="cu-arrow"></div>
                    <div class="dropdown-menu-content">
                        <a class="filter-item" onclick="window.location.href='{{url ""}}/logout'">{{t "Sign out"}}</a>
                    </div>
                </div>
            {{else}}
                {{authentication .}}
            {{/if}}
            </div>
        </div>

    </div>
</header>
