<div class="table-responsive">
    <div class="col-lg-12">
        {{#if wsdl_uuid}}
            <div class="col-lg-12 table table-striped table-hover divrow">
                <div class="col-lg-2">
                    <b>
                        {{t "Raw Content :"}}
                    </b>
                </div>
            </div>
        {{/if}}
        <div id='wsdl-viewer'>
            {{#if wsdlContent}}
                <textarea id="wsdlcontent" name="wsdlcontent" style="width:100%">{{../wsdlContent}}</textarea>
            {{else}}
                <div class="col-lg-12 table table-striped table-hover divrow">
                    <div class="col-lg-4">
                        <b>
                            {{t "No WSDL content to display."}}
                        </b>
                    </div>
                </div>
            {{/if}}
        </div>
    </div>
</div>