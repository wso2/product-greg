<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
        <h4>Overview</h4>
        </thead>
        <tbody>
        <tr>
            <td>Service Name</td>
            <td>
                {{name}}
            </td>
        </tr>
        <tr>
            <td>Service Version</td>
            <td>
                {{attributes.overview_version}}
            </td>
        </tr>
        <tr>
            <td>Context</td>
            <td>
                {{attributes.overview_context}}
            </td>
        </tr>
        </tbody>
    </table>
    <table class="table table-striped table-hover">
        <thead>
        <h4>Lifecycle</h4>
        </thead>
        <tbody>
        <tr>
            <th>Name :</th>
            <td>{{lifecycle}}</td>
        </tr>
        <tr>
            <th>State :</th>
            <td>{{lifecycleState}}</td>
        </tr>
        </tbody>
    </table>
    <table class="table table-striped table-hover">
        <thead>
        <h4>Associations</h4>
        </thead>
        <tbody>
        <tr>
            <th>Dependencies :</th>
        {{#each dependencies}}
            <tr>
                <td><a href="../../../asts/{{this.associationType}}/details/{{this.associationUUID}}">{{this.associationName}}</td>
            </tr>
        {{/each}}
        </tr>
        <tr>
            <th>Dependents :</th>
        {{#each dependents}}
            <tr>
                <td><a href="../../../asts/{{this.associationType}}/details/{{this.associationUUID}}">{{this.associationName}}</td>
            </tr>
        {{/each}}
        </tr>

        </tbody>
    </table>
    <div id='wsdl-viewer'>
        <legend><h4>WADL</h4></legend>
        {{#if wadlContent}}
            <textarea id="wadlcontent" name="wadlcontent">{{../wadlContent}}</textarea>
        {{else}}
            <p>No WADL Content To Display</p>
        {{/if}}
    </div>

</div>