{{#with assets}}
<div class='content-div'>
    <div class="tab-content asset-tab-content">
        <div id="view" class="asset-view-container">
            <div class="row-fluid asset-detail-top-row">
                <div class="span2">
                    <div class="thumbnail-div">
                        <img src='{{url ""}}/extensions/assets/xquery/themes/default/imgs/thumbnail.png' class="" alt="Thumb"/>

                    </div>
                </div>
                <div class="span10 asset-details-box">
                    <h4>{{name}}</h4>
                </div>
            </div>
            <div class="row-fluid asset-details-row">
                <div class="span12 asset-content-box">
                    <div class="widget wlightblue">
                        <div class="widget-head">
                            <div class="pull-left">Asset Overview</div>
                            <div class="asset-show-dependency"> 
                            <a class="btn btn-default btn-lg active pull-right" href='{{url ""}}/pages/impact?path={{path}}' target="_blank">
                            Show Dependency</a> 
                            </div>
                            <div class="clearfix"></div>
                        </div>
                        <div class="widget-content">
                            <table class="table table-striped table-hover">
                                <tbody>
                                <tr>
                                    <td>{{t "Name"}}</td>
                                    <td>{{name}}</td>
                                </tr>
                                <tr>
                                    <td>{{t "Version"}}</td>
                                    <td>{{version}}</td>
                                </tr>
                                <tr>
                                    <td>{{t "Media Type"}}</td>
                                    <td>{{mediaType}}</td>
                                </tr>
                                <tr>
                                    <td>{{t "Created by"}}</td>
                                    <td>{{authorUserName}}</td>
                                </tr>
                                </tbody>
                            </table>
                            <div id='xquery-viewer'>
                                <legend><h4>{{t "Content"}}</h4></legend>
                                <textarea id="xquerycontent" name="xquerycontent">{{content}}</textarea>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{{/with}}