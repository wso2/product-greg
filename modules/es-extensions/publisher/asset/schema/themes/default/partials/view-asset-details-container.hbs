{{#with assets}} 
<div class='content-div'>
    <div class="tab-content asset-tab-content">
        <div id="view" class="asset-view-container">
            <div class="row-fluid asset-details-row">
                <div class="span12 asset-content-box">
                    <div class="widget wlightblue">
                        <div class="widget-content">
                            <table class="table table-striped table-hover">
                                <tbody>
                                <tr>
                                    <td>{{t "Name"}}</td>
                                    <td>{{name}}</td>
                                </tr>
                                <tr>
                                    <td>{{t "Version"}}</td>
                                    <td>{{version}}</td>
                                </tr>
                                <tr>
                                    <td>{{t "Media Type"}}</td>
                                    <td>{{mediaType}}</td>
                                </tr>
                                </tbody>
                            </table>

                            {{#if isDependentsPresent}} 
                            <table class="table table-striped table-hover">
                                <thead>
                                <h4>Associations</h4>
                                </thead>
                                <tbody>
                                <tr>
                                    <th>Dependent WADLs :</th>
                                {{#each dependencies}}
                                    <tr>
                                        <td><a href="../../../assets/{{this.associationType}}/details/{{this.associationUUID}}">{{this.associationName}}</a></td>
                                    </tr>
                                {{/each}}
                                </tr>
                                </tbody>
                            </table>
                            {{/if}} 

                            <div id='schema-viewer'>
                                <legend><h4>{{t "Content"}}</h4></legend>
                                <textarea id="schemacontent" name="schemacontent">{{content}}</textarea>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{{/with}}