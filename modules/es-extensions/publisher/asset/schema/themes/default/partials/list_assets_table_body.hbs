{{#each .}}
    <div class="ctrl-wr-asset">
        <div class="itm-ast">
            <a class="ast-img" href='{{url ""}}/asts/{{type}}/details/{{this.id}}'><img src='{{url ""}}/extensions/assets/schema/themes/default/imgs/thumbnail.png' /></a>
            <div class="ast-desc">
                <a href='{{url ""}}/asts/{{type}}/details/{{this.id}}'>
                    <h3 class="ast-name">{{this.name}}</h3>
                </a>

                <span class="ast-ver">V{{this.attributes.version}} </span>
            </div>
            <br class="c-both" />
        </div><br class="c-both" />
    </div>
{{/each}}