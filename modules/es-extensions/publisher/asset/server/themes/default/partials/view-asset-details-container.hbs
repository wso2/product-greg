        <!-- {{#with assets}} -->
<div class="well asset-well">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-2">
                <img src='{{url ""}}/extensions/app/greg-publisher-defaults/themes/default/imgs/thumbnail.png' class=""
                     alt="Thumb"/>
            </div>
            <div class="col-lg-offset-1 col-lg-9">
                <div class="row">
                    <h1>{{name}}</h1>
                    {{#if lifecycleState}}
                        <i class="fa fa-circle"></i> {{lifecycleState}}
                    {{/if}}
                    <div class="well-description">{{tables.0.fields.createdtime.value}}</div>
                    <div>
                        {{> asset-version-info ..}}
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-2">
                     <span>
                        <a class="btn btn-default btn-lg active pull-left" id="diff-view-button"
                           href="{{url ""}}/assets/server/discovery?type=server&id={{id}}"
                           target="_blank">Discover Services</a>
                      </span>
                    </div>
                    <div class="col-lg-3">
                        <div class="asset-show-dependency">
                            <a class="btn btn-default btn-lg active" href='{{url ""}}/pages/impact?path={{path}}' target="_blank">
                                Show Dependency</a>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>


{{#each tables}}
    {{renderTablePreview .}}
{{/each}}

{{#if tags}}
    <a data-toggle="collapse" href="#collapseTags" class="collapsing-h2"><h2>Tags</h2></a>
    <div class="collapse" id="collapseTags">
        {{#each tags}}
            <span class="view-tag">{{this}}</span>
        {{/each}}
    </div>
{{/if}}


{{/with}}



