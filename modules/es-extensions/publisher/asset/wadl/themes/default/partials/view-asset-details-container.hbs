{{#with assets}} 
<div class='content-div'>
    <div class="tab-content asset-tab-content">
        <div id="view" class="asset-view-container">
            <div class="row-fluid asset-details-row">
                <div class="span12 asset-content-box">
                    <div class="widget wlightblue">
                        <div class="widget-content">

                            <h2 class="field-title">
                                <a class="collapsing-h2" data-toggle="collapse" area-expanded="true">
                                    {{t "Overview"}}
                                </a>
                            </h2>

                            <div id="Overview" class="collapse in" area-expanded="true" style="">
                                <div class="row padding-bottom-lg" id="Name">
                                    <div class="col-sm-2 text-right"><b>{{t "Name"}} :</b></div>
                                    <div id="nameValue" class="col-sm-10">{{name}}</div>
                                </div>
                                <div class="row padding-bottom-lg" id="Version">
                                    <div class="col-sm-2 text-right"><b>{{t "Version"}} :</b></div>
                                    <div id="versionValue" class="col-sm-10">{{version}}</div>
                                </div>
                                <div class="row padding-bottom-lg" id="Type">
                                    <div class="col-sm-2 text-right"><b>{{t "Media Type"}} :</b></div>
                                    <div id="mediaValue" class="col-sm-10">{{mediaType}}</div>
                                </div>
                            </div>

                            <h2 class="field-title">
                                <a class="collapsing-h2" data-toggle="collapse" area-expanded="true">
                                    {{t "Associations"}}
                                </a>
                            </h2>

                            <div class="row padding-bottom-lg" id="Name">
                                <div class="col-sm-2 text-right"><b>{{t "Associated REST services"}} :</b></div>
                                <table>
                                    {{#each dependencies}}
                                        <tr>
                                            <td>
                                                <div class="col-sm-20">
                                                    <a href="../../../assets/{{this.associationType}}/details/{{this.associationUUID}}">{{this.associationName}}</a>
                                                </div>
                                                <br>
                                            </td>
                                        </tr>
                                    {{/each}}
                                </table>
                            </div>
                           
                            <div id='wadl-viewer'>
                                <h2 class="field-title">
                                    <a class="collapsing-h2" data-toggle="collapse" area-expanded="true">
                                        {{t "Content"}}
                                    </a>
                                </h2>
                                <textarea id="wadlcontent" name="wadlcontent">{{content}}</textarea>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{{/with}}