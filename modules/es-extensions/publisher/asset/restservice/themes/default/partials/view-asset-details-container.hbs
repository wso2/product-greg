        <!-- {{#with assets}} -->
<div class='content-div'>
    <div class="tab-content asset-tab-content">
        <div id="view" class="asset-view-container">
            <div class="row-fluid asset-detail-top-row">
                <div class="span2">
                    <div class="thumbnail-div">
                        <img src='{{url ""}}/extensions/assets/restservice/themes/default/imgs/thumbnail.png' class="" alt="Thumb"/>
                    </div>
                </div>
                <div class="span10 asset-details-box">
                    <h4>{{name}}</h4>
                </div>
            </div>
            <div>
                {{> asset-version-info ..}}
            </div>
            <div class="row-fluid asset-details-row">
                <div class="span12 asset-content-box">
                    <div class="widget wlightblue">
                        <div class="widget-head">
                            <div class="pull-left">Asset Overview</div>
                            <div class="asset-show-dependency"> 
                            <a class="btn btn-default btn-lg active pull-right" href='{{url ""}}/pages/impact?path={{path}}' target="_blank">
                            Show Dependency</a> 
                            </div>
                            <div class="clearfix"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{{#each tables}}
    {{renderTablePreview .}}
{{/each}}

{{#if tags}}
    <a data-toggle="collapse" href="#collapseTags" class="collapsing-h2"><h2>Tags</h2></a>
    <div class="collapse" id="collapseTags">
    {{#each tags}}
        <span class="view-tag">{{this}}</span>
    {{/each}}
    </div>
{{/if}}
{{/with}}



