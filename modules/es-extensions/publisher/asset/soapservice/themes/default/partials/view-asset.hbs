        <!-- {{#with assets}} -->
<div class='content-div'>
    <div class="tab-content asset-tab-content">
        <div id="view" class="asset-view-container">
            <div class="row-fluid asset-detail-top-row">
                <div class="span2">
                    <div class="thumbnail-div">
                        <img src='{{url ""}}/extensions/assets/soapservice/themes/default/imgs/thumbnail.png' class="" alt="Thumb"/>
                    </div>
                </div>
                <div class="span10 asset-details-box">
                    <h4>{{name}}</h4>
                </div>
            </div>
            <div>
                {{> asset-version-info .}}
            </div>
            <div class="row-fluid asset-details-row">
                <div class="span12 asset-content-box">
                    <div class="widget wlightblue">
                        <div class="widget-head">
                            <div class="pull-left">Asset Overview</div>
                            <div class="asset-show-dependency"> 
                            <a class="btn btn-default btn-lg active pull-right" href='{{url ""}}/pages/impact?path={{path}}' target="_blank">
                            Show Dependency</a> 
                            </div>
                            <div class="clearfix"></div>
                        </div>

                        <div class="widget-content">
                            <table class="table table-bordered asset-view-table widget-table">
                                <tbody>
                                <tr>
                                    {{renderTablePreview tables.[0]}}
                                </tr>
                                <tr class="table table-striped table-hover">
                                    {{renderTablePreview tables.[1]}}
                                </tr>
                                <!-- Customize the 'interface' table to provide a link for wsdl url. -->
                                <tr>
                                    <h4 class='rxt-table-heading'>{{t "Interface"}}</h4>
                                    <table class='table'>
                                        <tr>
                                            <td>{{t "WSDL URL"}}</td>
                                            <!-- Assuming service can have only one dependency, WSDL.WADL will be shown in REST Service-->
                                            <td><a href="../../../asts/wsdl/details/{{wsdl_uuid}}" target="_blank">{{wsdl_url}}</a></td>
                                        </tr>
                                        <tr>
                                            <td>{{t "Transport Protocols"}}</td>
                                            <td>{{tables.[2].fields.transportProtocols.value}}</td>
                                        </tr>
                                        <tr>
                                            <td>{{t "Message Formats"}}</td>
                                            <td>{{tables.[2].fields.messageFormats.value}}</td>
                                        </tr>
                                        <tr>
                                            <td>{{t "Message Exchange Patterns"}}</td>
                                            <td>{{tables.[2].fields.messageExchangePatterns.value}}</td>
                                        </tr>
                                    </table>
                                </tr>
                                <tr class="table table-striped table-hover">
                                    {{renderTablePreview tables.[3]}}
                                </tr>
                                {{#if tags}}
                                    <tr>
                                        <td class="span3">Tags</td>
                                        <td>
                                            {{#each tags}}
                                                <span class="view-tag">{{this}}</span>
                                            {{/each}}
                                        </td>
                                    </tr>
                                {{/if}}
                                </tbody>
                            </table>
                            <table class="table table-striped table-hover">
                                <thead>
                                <h4>Associations</h4>
                                </thead>
                                <tbody>
                                <tr>
                                    <th>Dependencies :</th>
                                {{#each dependencies}}
                                    <tr>
                                        <td><a href="../../../asts/{{this.associationType}}/details/{{this.associationUUID}}">{{this.associationName}}</a></td>
                                    </tr>
                                {{/each}}
                                </tr>
                                <tr>
                                    <th>Dependents :</th>
                                {{#each dependents}}
                                    <tr>
                                        <td><a href="../../../asts/{{this.associationType}}/details/{{this.associationUUID}}">{{this.associationName}}</a></td>
                                    </tr>
                                {{/each}}
                                </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{{/with}}



