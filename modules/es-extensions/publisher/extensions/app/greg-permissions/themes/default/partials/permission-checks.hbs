<div class="radio block">
    <label class="wr-permissions-font">
        <input type="radio" id="public-everyone" name="roles"
               value="ra" {{#if_equal rolePermissions.permissionCheck "public"}}
               checked {{/if_equal}}>
        Visible to public
    </label>
</div>
<div class="radio block">
    <label class="wr-permissions-font">
        <input type="radio" id="public-internal" name="roles"
               value="ra" {{#if_equal rolePermissions.permissionCheck "internal"}}
               checked {{/if_equal}}>
        Visible to all users
    </label>
</div>
<div class="radio block">
    <label class="wr-permissions-font">
        <input type="radio" id="other-roles"
               name="roles" {{#if_equal rolePermissions.permissionCheck "other"}}
               checked {{/if_equal}}>
        Visible to specific roles
    </label>
</div>