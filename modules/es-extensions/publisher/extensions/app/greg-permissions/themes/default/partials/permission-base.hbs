<div class="container-fluid">
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-10 col-lg-10 col-centered">
            <div class="row wr-tile-buttons-list">
                <div class="col-md-7">
                    <h4>
                    <span class="fw-stack fw-lg">
                        <i class="fw fw-circle fw-stack-2x"></i>
                        <i class="fw fw-stack-1x fw-inverse fw-number">1</i>
                    </span> SELECT AN OPTION FOR PERMISSION
                    </h4>

                    <div class="wr-input-control" id="share-options">
                        {{> permission-checks .}}
                    </div>
                </div>
            </div>
            <div class="row">
                <div id="step2" class="col-xs-12 col-sm-12 col-md-8 col-lg-8 disabled-area">
                    <h4>
                    <span class="fw-stack fw-lg">
                        <i class="fw fw-circle fw-stack-2x"></i>
                        <i class="fw fw-stack-1x fw-inverse fw-number">2</i>
                    </span> SELECT A ROLE
                    </h4>

                    <div class="wr-input-control col-xs-8 col-sm-8 col-md-5 col-lg-5" id="roles">
                        <select class="select2 select-roles">
                            <option value="0" selected>--SELECT--</option>
                        </select>

                    </div>
                    <div class="wr-input-control col-xs-4 col-sm-4 col-md-5 col-lg-5">
                        <input type="hidden" id="pathWithVersion" value="{{rolePermissions.pathWithVersion}}">
                        <button class="btn btn-primary" id='addPermission'>
                            <span class="fw-stack">
                                <i class="fw fw-ring fw-stack-2x"></i>
                                <i class="fw fw-add fw-stack-1x"></i>
                            </span> Add
                        </button>
                        <i class="fa fa-spinner fa-spin fa-3x hide" id="new-version-loading-add"></i>
                    </div>
                    <div class="row wr-permissions-list">
                        <div class="col-xs-12 col-sm-10 col-md-12 col-lg-8" id="div-roles">
                            {{#each rolePermissions.list}}
                                {{#if this.readAllow}}
                                    {{> permission-entry .}}
                                {{/if}}
                            {{/each}}
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="wr-input-control">
                    <i class="fa fa-spinner fa-spin fa-3x hide" id="new-version-loading-save"></i>
                </div>
            </div>
        </div>
    </div>
</div>