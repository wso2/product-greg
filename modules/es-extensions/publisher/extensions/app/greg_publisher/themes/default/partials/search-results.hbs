<div class="row">
    <div class="col-lg-10 col-md-10 col-sm-10 col-xs-10 wr-filters">

        <div class="wr-search">
            <div>
                <form class="form-group" id="assetSearchForm" action='{{url "/assets/"}}{{rxt.shortName}}/list'>
                    <label class="search-label">{{t "Search for Assets"}}</label>

                    <div class="form-group has-feedback form-search">
                        <input type="text" name="query" id="inp_searchAsset" class="form-control"
                               placeholder="Search..." value="{{searchQuery}}">
                        <a href="javascript:void(0)" id="searchButton" class="form-control-feedback search"
                           title="{{t "Search"}}">
                            <i class="fw fw-search" aria-hidden="true"></i>
                        </a>
                        <a href="/publisher/pages/advanced-search" class="form-control-feedback advance"
                           id="advance-search" title="{{t "Advance Search"}}">
                            <span>{{t "Advanced Search"}}</span>
                        </a>
                        {{>search-options-popover .}}
                        <input type="hidden" name="sortby" value="{{paging.sortBy}}"/>
                        <input type="hidden" name="sort" value="{{paging.sortOrder}}"/>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 ">
        <!-- content -->
        <div class="ast-container" id="search-results">
			{{#each assets}}
			    {{#dyn asset=type}}
			            {{>result}}
			    {{/dyn}}
			{{/each}}
        </div>
    </div>
</div>